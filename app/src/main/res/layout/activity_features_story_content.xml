<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feature_story_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fffccc"
    android:padding="5dp"
    tools:context=".features.story.ContentStory"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FUNNY STORIES"
        android:background="#008000"
        android:textColor="#FFFFFF"
        android:textSize="40px"
        android:padding="3dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/activity_feature_story_content_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Đây là tựa đề"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/activity_feature_story_content_tv_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Nội dung truyện"
        android:padding="20dp"
        />

    <ImageButton
        android:id="@+id/activity_feature_story_content_ib_language"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_language_american"
        android:layout_gravity="center"
        />

</LinearLayout>