<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_features_card_view"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    android:clickable="true"
    card_view:cardBackgroundColor="#c11bccac">

    <RelativeLayout
        android:id="@+id/adapter_features"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/custom_pressed">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/adapter_features_iv_feature"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0400"
            android:textSize="16dp"
            android:text="Feature"
            android:id="@+id/adapter_features_tv_feature"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            fontPath="fonts/Star-Studded.ttf"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/adapter_features_iv_feature"
            android:layout_toEndOf="@+id/adapter_features_iv_feature" />

    </RelativeLayout>
</android.support.v7.widget.CardView>