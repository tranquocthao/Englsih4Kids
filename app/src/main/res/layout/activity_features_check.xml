<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_features_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#fcf7d0"

    android:orientation="vertical"
    tools:context="edu.uit.quocthao.english4kids.features.check.FeaturesCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/custom_pressed"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mini Game"
            android:textColor="#0c4e0d"
            android:textSize="50sp"
            android:textStyle="bold"
            android:fontFamily="cursive"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <android.support.design.widget.TabLayout
            android:background="#c2d672"
            android:layout_alignParentTop="true"
            android:id="@+id/activity_features_check_tl_game"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:tabSelectedTextColor="#f19090"
            app:tabTextColor="#c29de7"
            android:layout_weight="1"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_features_check_vp_game"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            />

    </LinearLayout>
</LinearLayout>
