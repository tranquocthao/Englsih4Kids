<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#c6eaffa4"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/activity_features_story_content_dialog_tv_title"
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ca340b"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/activity_features_story_content_dialog_tv_content"
        android:text="Content"
        android:textColor="#00aaff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/activity_features_story_content_dialog_iv_language"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_language_american"/>

</LinearLayout>
